<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nfg.devlot.dehari">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.EnterPhoneActivity" />
        <activity android:name=".Activity.EnterPasswordActivity" />
        <activity android:name=".Activity.NewUserFormActivity" />
        <activity android:name=".Activity.WelcomeNewUserActivity" />
        <activity android:name=".Activity.ForgotPasswordActivity"></activity>
    </application>

</manifest>